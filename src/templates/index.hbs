{{set root="."}}
{{> header cssName="main"}}
<div class="main_section">
	<div class="main_desc">
		내가 찾는 모든 펜션
	</div>
	<div class="main_title">
		한빛펜션
	</div>
	<div class="main_search">
		<div class="btn_wrap">
			<div class="region_search">
				<i class="fa fa-search"></i>
				<button type="button" class="btn_region_search btn">지역을 선택해 주세요</button>
			</div>
			<div class="reservation_box">
				<div class="reservation_date">
					<div class="chk_in">
						<i class="fa fa-calendar"></i>
						<button type="button" class="btn_chk_in btn">4월11일(화)</button>
					</div>
					<div class="chk_out">
						<i class="fa fa-calendar"></i>
						<button type="button" class="btn_chk_out btn">4월12일(수)</button>
					</div>
				</div>
			</div>
			<div class="reservation_box">
				<div class="reservation_date">
					<div class="chk_in">
						<i class="fa fa-user-o"></i>
						<button type="button" class="btn_chk_in btn">2명</button>
					</div>
					<div class="chk_out">
						<i class="fa fa-home"></i>
						<button type="button" class="btn_chk_out btn">전체펜션</button>
					</div>
				</div>
			</div>
			<div class="search_box">
				<button type="button" class="btn_search btn">검 색</button>
			</div>
			<div class="reservation_list_box">
				<button type="button" class="btn_reservation_list btn">예약내역 확인하기</button>
			</div>
		</div>
	</div>
</div>
{{> footer jsName="main"}}
